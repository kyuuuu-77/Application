<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.find.FindFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/nav_header_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.142"
        app:srcCompat="@drawable/find5" />

    <ImageView
        android:id="@+id/imageViewl"
        android:layout_width="350dp"
        android:layout_height="185dp"
        android:contentDescription="@string/nav_header_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.58"
        app:srcCompat="@drawable/rectangle_round" />

    <TextView
        android:id="@+id/text_find"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="벨을 울려서\n캐리어를 찾을 수 있습니다."
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewl"
        app:layout_constraintEnd_toEndOf="@+id/imageViewl"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewl"
        app:layout_constraintTop_toTopOf="@+id/imageViewl"
        app:layout_constraintVertical_bias="0.12" />

    <TextView
        android:id="@+id/find_status"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="찾기 기능 동작 여부"
        android:textAlignment="center"
        android:textSize="23sp"
        android:textColor="@color/light_black"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewl"
        app:layout_constraintEnd_toEndOf="@+id/imageViewl"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewl"
        app:layout_constraintTop_toTopOf="@+id/imageViewl"
        app:layout_constraintVertical_bias="0.66" />

    <TextView
        android:id="@+id/find_distance"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="캐리어와 거리"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/light_black"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewl"
        app:layout_constraintEnd_toEndOf="@+id/imageViewl"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewl"
        app:layout_constraintTop_toTopOf="@+id/imageViewl"
        app:layout_constraintVertical_bias="0.9" />

    <Button
        android:id="@+id/find_bag"
        android:layout_width="284dp"
        android:layout_height="59dp"
        android:background="@drawable/button_round"
        app:backgroundTint="@null"
        android:text="@string/find_bag"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.867" />

</androidx.constraintlayout.widget.ConstraintLayout>