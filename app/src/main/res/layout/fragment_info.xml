<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDF0F4"
    tools:context=".ui.find.FindFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="198dp"
        android:layout_height="198dp"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.134"
        app:srcCompat="@drawable/avatar" />

    <ImageView
        android:id="@+id/imageViewl"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:scaleX="1.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.565"
        app:srcCompat="@drawable/rectangle" />

    <TextView
        android:id="@+id/rssi_signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rssi_value"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewl"
        app:layout_constraintEnd_toEndOf="@+id/imageViewl"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/imageViewl"
        app:layout_constraintTop_toTopOf="@+id/imageViewl"
        app:layout_constraintVertical_bias="0.21" />

    <TextView
        android:id="@+id/text_info"
        android:layout_width="267dp"
        android:layout_height="72dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewl"
        app:layout_constraintEnd_toEndOf="@+id/imageViewl"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/imageViewl"
        app:layout_constraintTop_toTopOf="@+id/imageViewl"
        app:layout_constraintVertical_bias="0.838" />

    <Button
        android:id="@+id/chrge"
        android:layout_width="284dp"
        android:layout_height="59dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_round"
        android:backgroundTint="#3144F2"
        android:text="@string/check_battery"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.86" />

</androidx.constraintlayout.widget.ConstraintLayout>