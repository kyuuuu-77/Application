<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_weight"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">

    <include
        android:id="@+id/fragment_weight_container"
        layout="@layout/fragment_weight"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 드로어 메뉴 및 텍스트뷰 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical">

        <!-- NavigationView: 메뉴가 표시되는 곳 -->
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view_weight"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fitsSystemWindows="true"
            app:menu="@menu/activity_weight_drawer" />

        <!-- 선택된 항목들을 표시할 텍스트뷰 -->
        <TextView
            android:id="@+id/selected_airline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="선택된 항공사: 없음"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/selected_baggage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="선택된 수하물 유형: 없음"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/selected_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="선택된 무게: 없음"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible" />
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
